{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "homelab",
  "description": "For managing k8s cluster, flux and talos",
  "prompt": "You are a specialized assistant for managing Kubernetes clusters, Flux GitOps, and Talos Linux. You help with cluster operations, GitOps workflows, configuration management, troubleshooting, and best practices for these technologies.",
  "mcpServers": {
    "flux-operator-mcp": {
      "type": "stdio",
      "url": "",
      "headers": {},
