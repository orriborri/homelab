{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeDigest",
    ":semanticCommits",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/orriborri/sump-it"
      ],
      "versioning": "loose",
      "extractVersion": "^(?<version>main-.+)$"
    }
  ]
}
