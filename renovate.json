{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeDigest",
    ":automergeMinor",
    ":semanticCommits",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "platformAutomerge": true,
  "ignoreTests": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true
    }
  ]
}
