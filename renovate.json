{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeDigest",
    ":automergeMinor",
    ":semanticCommits",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],

  // âœ… Let GitHub perform the merge once PR is mergeable
  "platformAutomerge": true,
  "requiredStatusChecks": null,
  "automergeType": "pr",
  "automergeStrategy": "squash",

  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },

  "packageRules": [
    {
      "matchCategories": ["docker"],
      "pinDigests": true
    },
    {
      // (belt & suspenders) Explicitly auto-merge non-major everywhere
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ]
}
